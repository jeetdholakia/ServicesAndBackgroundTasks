<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.jeetdholakia.servicesandbackgroundtasks">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".BaseApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".jobIntentServices.JobIntentServiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".intentServices.IntentServiceActivity"></activity>

        <activity android:name=".foregroundservices.MainActivity"></activity>

        <service android:name=".foregroundservices.MyForegroundService" />
        <service android:name=".intentServices.MyIntentService" />
        <service android:name=".jobIntentServices.MyJobIntentService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

</manifest>